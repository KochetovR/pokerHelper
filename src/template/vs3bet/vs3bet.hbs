<div id="vs3bet">
    <h1 class="title">vs open raise</h1>
    <div class="box-content">
        <div class="stack__box secondary">
            <span class="stack__span">Stack</span>
            <label class="stack__label secondary">
                <input type="radio" name="stack" value="30">
                30bb
            </label>
            <label class="stack__label secondary">
                <input type="radio" name="stack" value="50">
                50bb
            </label>
            <label class="stack__label secondary">
                <input type="radio" name="stack" value="100">
                100bb
            </label>
        </div>
        <div class="pos__box">
            <span class="pos__span">Select position</span>
            <div class="pos__box-label">
                <div class="pos__box-sec">
                    <label class="pos__label mp">
                        <input type="radio" name="pos" value="mp">
                        MP
                    </label>
                    <label class="pos__label hj">
                        <input type="radio" name="pos" value="hj">
                        HJ
                    </label>
                </div>
                <div class="pos__box-sec">   
                    <label class="pos__label co">
                        <input type="radio" name="pos" value="co">
                        CO
                    </label>
                    <label class="pos__label bu">
                        <input type="radio" name="pos" value="bu">
                        BU
                    </label>
                </div>    
            </div>
            <div class="opp__box">
                <span class="opp__span">Opponents</span>
                <div class="opp__content"></div>
            </div>
        </div> 
    </div>
    <button type="button" class="generate-button" data="generate">Generate</button>
